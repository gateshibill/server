        select  <include refid="userOrderField"/> from user_order
		where user_id = #{userId}
		GROUP BY stock_code
    </select>
    
    <!-- 遵循t+1 : 查询昨天记录-->
    <select id="selectTone" resultMap="BaseResultMap">
    	select <include refid="userOrderField"></include> from user_order 
    	where is_add = 0 and order_participation_type = 1 and order_type = 1
    	and (TO_DAYS( NOW( ) ) - TO_DAYS(trade_time) = 1)
   	
    </select>

    <!--根据用户ID查询用户的订单的信息-->
