    </select>
    
    <select id="selectHobList" parameterType="com.sjy.entity.UserOrderVO" resultMap="Join_Result_Column">
        select order_buyer,order_exit_price,order_number,order_id as id,stock_code,stock_name,user_id,TIMESTAMPDIFF(day,create_time,trade_time) as days from user_order 
        where order_participation_type=4  and user_id=#{userId}
