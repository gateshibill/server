        where user_id = #{userId}
    </select>
    
    <select id="getCostPrice" resultType="double">
        select (sum(order_buyer*order_number)/sum(order_number)) from user_order where id = #{id}
    </select>
    
    <select id="selectHobCount" resultType="INT">
